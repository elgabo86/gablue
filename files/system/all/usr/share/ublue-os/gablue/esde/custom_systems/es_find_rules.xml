<?xml version="1.0"?>
<ruleList>
    <emulator name="SUYU">
        <!-- Nintendo Switch emulator Yuzu -->
        <rule type="systempath">
            <entry>suyu</entry>
        </rule>
        <rule type="staticpath">
            <entry>~/AppImages/suyu.appimage</entry>
        </rule>
    </emulator>
    <emulator name="CITRON">
        <!-- Nintendo Switch emulator Yuzu -->
        <rule type="systempath">
            <entry>citron</entry>
        </rule>
        <rule type="staticpath">
            <entry>~/AppImages/citron.appimage</entry>
            <entry>~/AppImages/citron_nightly.appimage</entry>
        </rule>
    </emulator>
    <emulator name="EDEN">
        <!-- Nintendo Switch emulator Yuzu -->
        <rule type="systempath">
            <entry>eden</entry>
        </rule>
        <rule type="staticpath">
            <entry>~/AppImages/eden.appimage</entry>
        </rule>
    </emulator>
    <emulator name="RYUJINX">
        <!-- Nintendo Switch emulator Yuzu -->
        <rule type="systempath">
            <entry>ryujinx</entry>
        </rule>
        <rule type="staticpath">
            <entry>~/AppImages/ryujinx.appimage</entry>
        </rule>
    </emulator>
    <emulator name="SUDACHI">
        <!-- Nintendo Switch emulator Yuzu -->
        <rule type="systempath">
            <entry>sudachi</entry>
        </rule>
        <rule type="staticpath">
            <entry>~/AppImages/sudachi</entry>
        </rule>
    </emulator>
    <emulator name="AZAHAR">
        <!-- Nintendo 3DS emulator Azahar -->
        <rule type="staticpath">
            <entry>/var/lib/flatpak/exports/bin/org.azahar_emu.Azahar</entry>
            <entry>~/AppImages/azahar*.appimage</entry>
            <entry>~/Applications/azahar*.AppImage</entry>
            <entry>~/.local/share/applications/azahar*.AppImage</entry>
            <entry>~/.local/bin/azahar*.AppImage</entry>
            <entry>~/bin/azahar*.AppImage</entry>
        </rule>
    </emulator>

</ruleList>
